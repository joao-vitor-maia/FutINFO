                <a class="dropdown-item py-2" href="/usuario/ver-perfil"><span class="inicio-text">-</span> Editar meu perfil</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item py-2" onclick="logout()">
                 <div class="btn btn-danger btn-danger-person"> Fazer logout
                 </div>
                 </a>
              {{else if decoded}}
                 <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item py-2" href="/usuario/horarios-reservados"><span class="inicio-text">-</span> Histórico de agendamento<br>de quadras </a>
                <a class="dropdown-item py-2" href="/usuario/ver-perfil"><span class="inicio-text">-</span> Editar meu perfil</a>
                <a class="dropdown-item py-2" href="/admin/adicionar-classificacao"><span class="inicio-text">-</span> Acessar Dashboard</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item py-2" onclick="logout()">
                 <div class="btn btn-danger btn-danger-person"> Fazer logout
                 </div>
                 </a>
              </div>
              <button type="button" class="btn btn-person dropdown-toggle" href="" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Olá, {{decoded.nome}}!
              </button>
              {{else}}
              <button type="button" onclick="redirecionarLogin()" class="btn btn-person dropdown-toggle" href="" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Entrar ou inscrever-se
              </button>
              {{/if}}
              </div>
            </div>
          </div>
        </div>
      </nav>
    </div>
  </header>
   <!------- Section ------>
   <section class="mt-2">
    <div class="text-classificacao-area w-100">
      <h1 class="h1-classificacao">Classificação e artilheiros</h1>
    </div>
     <div class="container-fluid">
       <div class="row py-3">
   <!------- Área da tabela de classificação ------>
        <div class="px-3 col-xl-7 col-lg-6 col-md-7 col-sm-12 tabela-col ">
   <!------- Tabela ------>
          {{#each times_resultadoJogos_divisao}}
            <div class="tabela-content-area py-3">
              <div class="divisao-text-area my-3 mb-2">
              <span class="divisao-text mt-2">{{this.divisaoAtual}}º Divisão</span>
            </div>
          <div class="tabela-area">
            <table class="table table-bordered mt-2">
              <thead>
                <tr>
                  <th scope="col" class="th-time">Time</th>
                  <th scope="col">Pts</th>
                  <th scope="col">J</th>
                  <th scope="col">V</th>
                  <th scope="col">D</th>
                  <th scope="col">E</th>
                </tr>
              </thead>
              <tody>
                {{#each this.times}}
                <tr>
                  <th scope="row">{{this.classificacao}}º - {{this.nome}}</th>
                    <th class="th-center">{{this.ponto}}</th>
                    <th class="th-center">{{this.jogo}}</th>
                    <th class="th-center">{{this.vitoria}}</th>
                    <th class="th-center">{{this.derrota}}</th>
                    <th class="th-center">{{this.empate}}</th>
                  </tr>
                  {{/each}}
              </tbody>
            </table>
          </div>
   <!------- Rodada ------>
          {{#each this.resultadoJogosRodada}}
          <div class="rodada-area">
            <div class="rodada">
              <div class="arrow-left-area">
                <img src="/Images/Classificação-artilheiros/left-arrow.svg" class="arrow-left">
              </div>
              <div class="text-rodada-area">
              <h1 class="h1-rodada">{{this.rodadaAtual}}º Rodada</h1>
            </div>
               <div class="arrow-right-area">
                <img src="/Images/Classificação-artilheiros/right-arrow.svg" class="arrow-right">
              </div>
            </div>
   <!------- Resultado dos jogos ------>
   
            <div class="resultado-area mt-2">
              <div class="resultado mx-auto py-3">
                {{#each this.resultadoJogos}}
                <div class="time-resultado-area py-3">
                  <div class="time-gol-area">
                  <span class="span-time px-1">{{this.timeId1.nome}}</span>
                  <span class="span-gol px-1">{{this.golTime1}}</span>
                  <span class="span-X px-2">X</span>
                  <span class="span-gol px-1">{{this.golTime2}}</span>
                  <span class="span-time px-1">{{this.timeId2.nome}}</span>
                </div>
                {{/each}}
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
       {{/each}}
   <!------- Artilheiros ------>
        <div class="col-xl-5 col-lg-6 col-md-5 col-sm-12 artilheiros-col py-3">
          <div class="artilheiros-content-area">
   <!------- H1 Artilheiros ------>
            <div class="artilheiros-text-h1">
              <h1 class="h1-artilheiros">Artilheiros</h1>
            </div>
   <!------- Divisão artilheiros ------>
          {{#each artilheiros_divisao}}
          <div class="artilheiros-table-area">
          <div class="text-divisao-artilheiros my-3 mb-2">
            <span class="text-artilheiros-divisao">
              {{this.divisaoAtual}}º Divisão
            </span>
          </div>
   <!------- Tabela artilheiros ------>
          <div class="tabela-artilheiros-area">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th scope="col" class="th-time">Time</td>
                  <th scope="col" class="th-center">Jogador</td>
                  <th scope="col" class="th-center">Gols</td>
                </tr>
              </thead>
              {{#each this.artilheiros}}
              <tbody>
                <tr>
                  <td scope="row" class="th-center">{{this.timeId.nome}}</td>
                  <td class="th-center">{{this.nome}}</td>
                  <td class="th-center">{{this.gol}}</td>
                </tr>
              </tbody>
              {{/each}}
            </table>
          </div>
          </div>
          {{/each}}
        </div>
         </div>
       </div>
       </div>
   </section>
