   <!------- Section ------>
   <section class="mt-2">
   <!------- Texto topo das quadras ------>
    <div class="text-top-quadras">
      <h1 class="h1-top py-2">Quadras</h1>
    </div>
    <div class="container-fluid">
   <!------- Área das quadras ------>
      <main class="col-xl-12 col-12 col-quadras">
        <aside class="container container-quadra">
          {{#each quadras}}
          <div class="quadra-content-area px-3 py-3 mt-5">
   <!------- Conteúdo da quadra ------>
            <div class="quadra-content">
              <div class="row">
   <!------- Slide da quadra ------>
              <div class="slide-quadra-area col-xl-6 col-lg-6 col-md-12">
                <div id="slideQuadra{{this.quadra._id}}" class="carousel slide" data-ride="carousel">
                  <div class="carousel-inner">
                    {{#each this.imagens}}
                      {{#if @first}}
                        <div class="carousel-item active">
                          <img class="d-block w-100 img-quadra" src="{{this.url}}" alt="Primeiro Slide">
                        </div>
                      {{else}}
                        <div class="carousel-item">
                          <img class="d-block w-100 img-quadra" src="{{this.url}}" alt="Primeiro Slide">
                        </div>
                      {{/if}}
                    {{/each}}
                  </div>
                  <a class="carousel-control-prev" href="#slideQuadra{{this.quadra._id}}" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Anterior</span>
                  </a>
                  <a class="carousel-control-next" href="#slideQuadra{{this.quadra._id}}" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Próximo</span>
                  </a>
                </div>
              </div>
   <!------- Informações da quadra ------>
              <div class="info-quadra-area col-xl-6 col-lg-6 col-md-12">
   <!------- Nome da quadra ------>
                <div class="info-quadra-content pl-3">
               <div class="quadra-nome-area mt-2 text-center">
                 <h1 class="h1-nome-quadra">{{this.quadra.nome}}</h1>
               </div>
   <!------- Endereço da quadra ------>
               <div class="endereco-valor-area mt-3 pt-2">
               <div class="endereco-quadra-area py-2">
                 <span class="span-endereco"><span class="span-bold">Endereço:</span> {{this.quadra.rua}}, {{this.numeroRua}}</span>
               </div>
                 <!------- Valor da quadra ------>
                 <div class="valor-quadra-area py-2">
                  <span class="span-valor"><span class="span-bold">Preço:</span> R${{this.quadra.preco}}</span>
                </div>
                <!------- Descrição da quadra ------>
                <div class="descricao-quadra-area py-2">
                  <span class="span-descricao"><span class="span-bold">Descrição:</span> "{{this.quadra.descricao}}"</span>
                </div>
                <!------- Botão de agendamento ------>
                <div class="botoes-area text-center mt-3">
                <!------- Botão de agendamento pelo site ------>
                <div class="botao-agendamento-area py-3">
                  <button data-toggle="modal" data-target="#modalQuadra{{this.quadra._id}}" class="btn btn-agendamento">Agendar pelo site</button>
                                  <!------- Modal ------>
<div class="modal fade" id="modalQuadra{{this.quadra._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Horários disponíveis:</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="opcoes-area-content py-2">
        <div class="dia-area py-3">
          <span class="opcao-texto">Dia:</span>
          <select class="selecao-modalidade" id="data">
            {{#each this.datasDisponiveis}}
              <option class="option-item">{{this.dia}}/{{this.mes}}/{{this.ano}}</option>
            {{/each}}
          </select>
        </div>
       <!------- Modalidade modal ------>
          <div class="modalidade-area py-3">
            <span class="opcao-texto">Modalidade:</span>
            <select class="selecao-modalidade" id="modalidade">
              {{#if this.modalidades}}
                {{#if this.modalidades.modalidade1}} <option class="option-item">{{this.modalidades.modalidade1}}</option> {{/if}}
                {{#if this.modalidades.modalidade2}} <option class="option-item">{{this.modalidades.modalidade2}}</option> {{/if}}
                {{#if this.modalidades.modalidade3}} <option class="option-item">{{this.modalidades.modalidade3}}</option> {{/if}}
                {{#if this.modalidades.modalidade4}} <option class="option-item">{{this.modalidades.modalidade4}}</option> {{/if}}
              {{/if}}
            </select>
          </div>
        <!------- Horários modal ------>
          <div class="horarios-area py-3">
            <span class="opcao-texto">Horários disponíveis:</span>
            <select class="selecao-horarios" id="horario">
              {{#each this.horariosDisponiveis}}
                <option class="option-item">{{this.horarioIntervalo.start}} - {{this.horarioIntervalo.end}}</option>
              {{/each}}
            </select>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
        <button type="button" onclick="solicitarHorario()" value="{{this.quadra._id}}" class="btn btn-primary">Solicitar horário</button>
      </div>
    </div>
  </div>
</div>
                </div>
                <!------- Texto OU ------>
                <span class="text-center text-OU">OU</span>
                <!------- Botão de agendamento pelo site ------>
                <a href="https://api.whatsapp.com/send?1=pt_BR&phone=55{{this.telefone}}">
                  <div class="botao-agendamento-area py-3">
                    <button class="btn btn-success btn-whatsPerson">Agendar pelo Whatsapp</button>
                  </div>
                </a>
                </div>
               </div>
             </div>

              </div>
            </div>
          </div>
          </div>
          {{/each}}
        </aside>
      </main>
  </div>
